/* 搜索输入部分 */
.sosuo{
  display: flex;
  justify-content: space-between;
  font-size: 25rpx;
  padding: 15rpx 17rpx 24rpx 18rpx;
}
.sosuo .sosuo-left{
  display: flex;
  align-items: center;
  width: 599rpx;
  height: 61rpx;
  padding-left: 15rpx;
  border-radius: 27rpx;
  background-color: #E7E7E7;
}
.sosuo .sosuo-left input{
  width: 100%;
  height: 100%;
}
.sosuo .sosuo-right{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 101rpx;
  height: 61rpx;
  color: white;
  border-radius: 8rpx;
  background-color: var(--yougouColor);
}